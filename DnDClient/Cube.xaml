<Window x:Class="DnDClient.CubeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Kostka" Height="236" Width="223" WindowStartupLocation="CenterScreen" Topmost="True" ResizeMode="CanMinimize" Icon="icon.ico">
    <Grid>
        <Label Content="Rzut Kostką" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center"/>

        <xctk:IntegerUpDown x:Name="throws" HorizontalAlignment="Center"  Minimum="1" Value="1" Increment="1" Margin="0,65,100,0" VerticalAlignment="Top" Height="25" Width="40"/>
        <Label Content="x" HorizontalAlignment="Center" Margin="0,63,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Segoe UI Symbol"/>
        <xctk:IntegerUpDown x:Name="cubeType" HorizontalAlignment="Center" Minimum="1" Value="20" Increment="1" Margin="100,65,0,0" VerticalAlignment="Top" Height="25" Width="40"/>

        <ComboBox x:Name="modifierBox" HorizontalAlignment="Center" Margin="0,105,0,0" VerticalAlignment="Top" Width="140"/>

        <Button x:Name="randomizeButton" Content="Losuj" HorizontalAlignment="Center" Margin="0,145,0,0" VerticalAlignment="Top" Width="75" Height="47" Click="randomizeButton_Click"/>
    </Grid>
</Window>
